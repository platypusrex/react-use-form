{
  "name": "@platypusrex/react-use-form",
  "author": "Frank Cooke",
  "description": "React hook to manage form state and validation with yup.js",
  "keywords": [
    "react",
    "hooks",
    "forms",
    "yup",
    "debounce"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platypusrex/react-hook-form.git"
  },
  "bugs": {
    "url": "https://github.com/platypusrex/react-hook-form/issues"
  },
  "homepage": "https://github.com/platypusrex/react-hook-form#readme",
  "version": "0.6.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "module": "dist/react-use-form.esm.js",
  "engines": {
    "node": ">=14.17.*"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --coverage",
    "test:related": "tsdx test --findRelatedTests",
    "lint": "tsdx lint",
    "lint:fix": "tsdx lint --fix",
    "check:types": "tsc --pretty --noEmit",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release": "standard-version"
  },
  "size-limit": [
    {
      "path": "dist/react-use-form.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-use-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/lodash.debounce": "^4.0.6",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.5",
    "standard-version": "^9.3.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "yup": "^1.0.0-beta.1"
  },
  "resolutions": {
    "typescript": "4.5.4"
  }
}
