{
  "name": "@platypusrex/react-use-form",
  "version": "1.0.0",
  "author": "Frank Cooke",
  "description": "React hook to manage form state and validation with yup.js",
  "keywords": [
    "react",
    "hooks",
    "forms",
    "yup",
    "debounce"
  ],
  "homepage": "https://github.com/platypusrex/react-hook-form#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platypusrex/react-hook-form.git"
  },
  "bugs": {
    "url": "https://github.com/platypusrex/react-hook-form/issues"
  },
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/dts/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14.17.*"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && concurrently \"yarn build:cjs\" \"yarn build:esm\" \"yarn build:ts\"",
    "build:cjs": "swc src -d dist/cjs --config-file .swcrc -C module.type=commonjs",
    "build:esm": "swc src -d dist/esm --config-file .swcrc -C module.type=es6",
    "build:ts": "tsc --project tsconfig.type.json",
    "clean": "rimraf dist",
    "clean:deps": "rimraf node_modules",
    "check:types": "tsc --noEmit",
    "test": "jest test --coverage",
    "lint": "eslint --cache '{src,test}/**.{ts,tsx,js,md}'",
    "lint:fix": "eslint '{src,test}/**.{ts,tsx,js,md}' --fix",
    "prepare": "husky install",
    "version": "changeset version",
    "release": "yarn lint && changeset publish && git push --follow-tags"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.70",
    "@swc/jest": "^0.2.27",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.3",
    "@types/lodash.debounce": "^4.0.7",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "tslib": "^2.6.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "yup": "^1.2.0"
  }
}
